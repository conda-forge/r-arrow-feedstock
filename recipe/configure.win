#!/bin/bash

set -euxo pipefail

echo "PKG_CPPFLAGS=-DNDEBUG -I\"${LIBRARY_PREFIX}/include\" -I\"${PREFIX}/include\" -D_CRT_SECURE_NO_WARNINGS -DARROW_R_WITH_ARROW" > src/Makevars.win
echo 'PKG_CXXFLAGS=$(CXX_VISIBILITY)' >> src/Makevars.win
echo 'CXX_STD=CXX11' >> src/Makevars.win
echo "PKG_LIBS=-L\"${LIBRARY_PREFIX}/lib\" -larrow_dataset -lparquet -larrow -fuse-ld=lld" >> src/Makevars.win
